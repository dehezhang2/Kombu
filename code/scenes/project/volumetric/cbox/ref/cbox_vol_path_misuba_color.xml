<scene version="3.0.0">
    <default name="spp" value="128"/>
    <default name="res" value="256"/>
    <default name="max_depth" value="6"/>

    <integrator type="volpath"/>

    <sensor type="perspective">
        <float name="fov" value="27.78"/>
        <transform name="to_world">
            <scale value="1,1,1"/>
            <lookat origin="0,0.919,5.411"
                    target="0,0.893051,4.41198"
                    up    ="  0,   1,    0"/>
        </transform>
        <sampler type="independent">  <!-- ldsampler -->
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <integer name="width" value="800"/>
            <integer name="height" value="600"/>
            <rfilter type="gaussian"/>
        </film>
    </sensor>
    
	<shape type="obj">
		<string name="filename" value="meshes/walls.obj"/>
		<bsdf type="diffuse">
			<rgb value="0.725 0.71 0.68" name="reflectance"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="meshes/rightwall.obj"/>
		<bsdf type="diffuse">
			<rgb value="0.161 0.133 0.427" name="reflectance"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="meshes/leftwall.obj"/>

		<bsdf type="diffuse">
		<rgb value="0.630 0.065 0.05" name="reflectance"/>
		</bsdf>
	</shape>

    
    <shape type="sphere">
		<point name="center" value="-0.421400 0.332100 -0.280000" />
		<float name="radius" value="0.3263" />
		<medium type="homogeneous" name="interior">
			<phase type="isotropic"/>
			<rgb name="sigma_t" value="0.6 0.3 0.2" />
			<rgb name="albedo" value="0.167 0.333 0.5" />
			<!-- <rgb name="sigma_t" value="1 1 1" />
			<rgb name="albedo" value="0.4 0.4 0.4" /> -->
			<float name="scale" value="10"/>
		</medium>
		<bsdf type="null" />
	</shape>

	<shape type="sphere">
		<point name="center" value="0.445800 0.332100 0.376700" />
		<float name="radius" value="0.3263" />
		<medium type="homogeneous" name="interior">
			<phase type="isotropic"/>
			<rgb name="sigma_t" value="0.2 0.3 0.6" />
			<rgb name="albedo" value="0.5 0.333 0.167" />
			<!-- <rgb name="sigma_t" value="1 1 1" />
			<rgb name="albedo" value="0.4 0.4 0.4" /> -->

			<float name="scale" value="10"/>
		</medium>
		<bsdf type="null" />
	</shape>

